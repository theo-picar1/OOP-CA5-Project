<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oopca5project.JavaFX.ProductsController"
            stylesheets="@styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <center>
        <VBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Products Page" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="modelText" text="Welcome to the Product section! Choose one of the following" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Add Product"/>
                <Button text="Edit Product"/>
                <Button text="Delete Product"/>
                <Button text="Back" onAction="#onGoBackClick"/>
            </HBox>

            <!-- Reference: https://docs.oracle.com/javase/8/javafx/api/javafx/scene/layout/GridPane.html -->
            <!-- Works the same as grid-template-columns in Web Development -->
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Size:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="sizeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Supplier ID:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="supplierIdField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Product Table -->
            <TableView fx:id="productTableView" prefWidth="800">
                <columns>
                    <TableColumn fx:id="idColumn" text="product_id" prefWidth="60"/>
                    <TableColumn fx:id="descriptionColumn" text="product_description" prefWidth="150"/>
                    <TableColumn fx:id="sizeColumn" text="size" prefWidth="80"/>
                    <TableColumn fx:id="priceColumn" text="unit_price" prefWidth="80"/>
                    <TableColumn fx:id="supplierIdColumn" text="supplier_id" prefWidth="100"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
